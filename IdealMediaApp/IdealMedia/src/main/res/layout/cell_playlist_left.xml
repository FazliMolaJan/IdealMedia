<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_page_L"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <libs.MaterialRippleLayout
        style="@style/track_ripple"
        android:id="@+id/actionSetPlaylistAsWorking">

        <LinearLayout
            style="@style/track_cell_action"
            android:background="?colorPlaylistCellActionSetDefault">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_set_playlist_as_default" />

            <TextView
                android:id="@+id/textSetAsDefault"
                style="@style/track_cell_action_text"
                android:text="@string/playlist_cell_action_set_as_default" />
        </LinearLayout>
    </libs.MaterialRippleLayout>

    <libs.MaterialRippleLayout
        style="@style/track_ripple"
        android:id="@+id/actionEditPlaylist"
        android:layout_toRightOf="@id/actionSetPlaylistAsWorking"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            style="@style/track_cell_action"
            android:background="?colorPlaylistCellActionEdit">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_playlist" />

            <TextView
                android:id="@+id/textSearchAuthor"
                style="@style/track_cell_action_text"
                android:text="@string/playlist_action__edit" />
        </LinearLayout>
    </libs.MaterialRippleLayout>

</LinearLayout>
